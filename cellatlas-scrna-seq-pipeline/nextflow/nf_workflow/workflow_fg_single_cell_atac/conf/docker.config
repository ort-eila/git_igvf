process {
  withLabel: 'bustool' {
    container = 'eilalan/atomic_update:latest'
    executor = 'local'
    cpus = 8
    maxRetries=1
  }

  withLabel: 'chromap_idx' {
    container = 'eilalan/chromap_env:latest'
    executor = 'local'
    cpus = 32
    maxRetries =1 
    disk='50 GB'
  }

  withLabel: 'chromap' {
    container = 'eilalan/chromap_env:latest'
    executor = 'local'
    cpus = 8
    maxRetries =1 
    disk='50 GB'
  }

  withLabel: 'download' {
    container = 'eilalan/atomic_update:latest'
    executor = 'local'
    cpus = 4
    maxRetries=1 
  }

  docker {
    enabled = true
    }
}